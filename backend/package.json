{
  "name": "backend",
  "version": "1.0.0",
  "description": "E-commerce backend",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node server.ts",
    "server": "clear && set NODE_ENV=DEVELOPMENT && nodemon server.ts",
    "prod": "set NODE_ENV=PRODUCTION && nodemon server.ts",
    "seeder": "clear && cd utils && ts-node seeder.ts",
    "client": "BROWSER=NONE npm start --prefix ../frontend/",
    "dev-full": "concurrently \"npm run server\"  \"npm run client\""
  },
  "keywords": [],
  "author": "MichRad",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cloudinary": "^1.30.1",
    "concurrently": "^7.3.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.1",
    "nodemailer": "^6.7.7",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/nodemailer": "^6.4.5",
    "@types/nodemon": "^1.19.2",
    "@types/validator": "^13.7.5",
    "nodemon": "^2.0.19"
  }
}
